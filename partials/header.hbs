<nav class="navbar">
    {{#if @site.logo}}
        <a class="navbar-logo" href="{{@site.url}}"><img src="{{@site.logo}}" alt="{{@site.title}}" /></a>
    {{/if}}
    {{#is "index"}}
        <h1 class="navbar-title{{#if @site.logo}} sr-only{{/if}}"><a href="{{@site.url}}">{{@site.title}}</a></h1>
    {{else}}
        <p class="navbar-title{{#if @site.logo}} sr-only{{/if}}"><a href="{{@site.url}}">{{@site.title}}</a></p>
    {{/is}}
    {{#if @site.navigation}}
        <div class="navbar-menu">
            {{navigation}}
        </div>
    {{else}}
        <button class="navbar-search-btn" aria-label="Search" data-ghost-search>{{> "icons/search"}}</button>
    {{/if}}
</nav>
